<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pkll"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.speakin.recorder.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="50dp"
            android:text="得分："
            />
        <TextView
            android:id="@+id/score"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="50dp"
            android:text="0"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/history"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="V.S"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/formula"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="50dp"
            android:text="0 + 0 = "
            />
        <TextView
            android:id="@+id/answer"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="50dp"
            android:text="0"
            />
    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:rowCount="4"
        android:columnCount="3">
        <Button
            android:id="@+id/num1"
            android:textSize="30dp"
            android:text="1"/>
        <Button
            android:id="@+id/num2"
            android:textSize="30dp"
            android:text="2"/>
        <Button
            android:id="@+id/num3"
            android:textSize="30dp"
            android:text="3"/>
        <Button
            android:id="@+id/num4"
            android:textSize="30dp"
            android:text="4"/>
        <Button
            android:id="@+id/num5"
            android:textSize="30dp"
            android:text="5"/>
        <Button
            android:id="@+id/num6"
            android:textSize="30dp"
            android:text="6"/>
        <Button
            android:id="@+id/num7"
            android:textSize="30dp"
            android:text="7"/>
        <Button
            android:id="@+id/num8"
            android:textSize="30dp"
            android:text="8"/>
        <Button
            android:id="@+id/num9"
            android:textSize="30dp"
            android:text="9"/>
        <Button
            android:id="@+id/num0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:textSize="30dp"
            android:text="0" />
        <Button
            android:id="@+id/clear"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:textSize="30dp"
            android:text="C" />
        <Button
            android:id="@+id/start"
            android:layout_width="170dp"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:textSize="30dp"
            android:text="开始" />
    </GridLayout>
</LinearLayout>